  </div>

  <div class="field">
    <%= f.label :goal_amount %>
    <%= f.number_field :goal_amount %>
  </div>

  <div class="field">
    <%= f.label :actual_money %>
    <%= f.number_field :actual_money %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :descriptive_page %>
    <%= f.text_field :descriptive_page %>
  </div>
  <div class="field">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>

