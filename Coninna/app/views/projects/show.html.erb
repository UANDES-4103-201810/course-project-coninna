<p id="notice"><%= notice %></p>
<div  style="width:100; height:100; background-color:lightpink; padding-top: 0px">
  <h1 style="font-size:50px; text-align:left"><%= @project.title %></h1>
</div>
<div class="container-fluid">
	<p>
	  <% if @project.photo.exists? %>
	    <%= image_tag @project.photo.url(:medium), class:'img-thumbnail' %></p>
	
	 <p> <%= link_to "Download Photo", download_path(id:@project) %></p>
	<%end%>
	<p>
	  <strong>Category:</strong>
	  <% @project.categories.each do |category| %>
	    <%= category.name %>
	  <% end %>
	</p>

	<p>
	  <strong>Owner:</strong>
	  <%= link_to @project.user.name , user_path(@project.user)%>
	</p>

	<p>
	  <strong>Description:</strong>
	  <%= @project.description %>
	</p>

	<p>
	  <strong>Days to go:</strong>
	  <%= @project.days_to_go %>
	</p>

   <p>
    <strong>Goal amount: $</strong>
    <%= @project.goal_amount %></p>
    <p><strong>Actual Money: $</strong>
      <%= @project.actual_money %></p>

        <div class="col-sm-2">
	     <div class="progress">
	  		<div class="progress-bar" style="width:<%= (@project.actual_money.to_f/@project.goal_amount.to_f )*100%>%" role="progressbar" aria-valuenow="<%= ((@project.actual_money.to_f/@project.goal_amount.to_f )*100).to_int%>; color:black" aria-valuemin="0" aria-valuemax="<%=@project.goal_amount%>"><%= ((@project.actual_money.to_f/@project.goal_amount.to_f )*100).to_int%>%</div>
		 </div>
</div>


<br>

<p>
  <strong>Descriptive page:</strong>
  <%= @project.descriptive_page %>
</p>
<p>
 <strong>Promises:</strong>
  <% if @project.id == @promise.id %>
	<%=@promise.description%>
  <%end%>
  	
</p>


<% if user_signed_in? %>
  <% if @project.user == current_user || current_user.admin%>
    <%= link_to 'Edit', edit_project_path(@project) %>
    <%= link_to 'Destroy', @project, method: :delete, data: {confirm: 'Are you sure?'} %>


  <% else %>
    <div class="row">
    	<div class="col-sm-2">
	
      	   <input type="number" id="fund_input" class="form-control"></div>
	<div class="col-sm-2">
      	   <button type="button" class="btn btn-success" id="fund_btn" onclick="Fundsck();" value="<=%@user_id %>">Fund</button></div>
     </div>
	<br>
    <div class="row">
    	<div class="col-sm-4">
     		 <button type="button" class="btn btn-success" id="buy_btn" onclick="Buy();" value="<=%@user_id %>">Buy Promise</button>
     		 <button type="button" class="btn btn-primary" id="wish_btn" onclick="Like();" value="<=%@user_id %>">Add to Wishlist</button>
    </div>
    </div>
    
    <% end %>
<div>

    </div>


  <input type="hidden" id="project_id" value="<%= @project.id %>">

<% end %>
</div>
<%= link_to 'Back', projects_path %>

