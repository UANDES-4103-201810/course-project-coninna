<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @project.photo.url(:medium), class: 'img-thumbnail' %>
</p>
<p>
  <strong>Category:</strong>
  <% @project.categories.each do |category| %>
    <%= category.name %>
  <% end %>
</p>

<p>
  <strong>User:</strong>
  <%= @project.user.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Days to go:</strong>
  <%= @project.days_to_go %>
</p>

<p>
  <strong>Goal amount:</strong>
  <%= @project.goal_amount %>
</p>

<p>
  <strong>Actual Money:</strong>
  <%= @project.actual_money %>
</p>

<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Descriptive page:</strong>
  <%= @project.descriptive_page %>
</p>

<% if @project.user == current_user || current_user.admin%>
  <%= link_to 'Edit', edit_project_path(@project) %>
  <%= link_to 'Destroy', @project, method: :delete, data: {confirm: 'Are you sure?'} %>
	 

<% else %>
  <div>
    <button type="button" class="btn btn-success">Fund</button>
    <button type="button" class="btn btn-primary">Add to Wishlist</button>
  </div>
  <% end %>


<%= link_to 'Back', projects_path %>
