<!DOCTYPE html>
<html>
<head>
  <title>Coninna Crowdfunding</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="navbar navbar-default">
  <div class="container">
    <nav>
      <ul>
        <%= link_to 'Home', root_path %>
        <%= link_to 'Projects', projects_path %>
        <% if user_signed_in?%>
          <%= link_to 'Wishlist', wishlist_path: @wishlist %>
          <%= link_to 'My profile', current_user %>
          <%= link_to 'My projects', project_path: @project %>
          <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
        <% else %>
          <%= link_to 'Login', new_user_session_path %>
          <%= link_to 'Sign Up', new_user_registration_path %>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
<div style="width:1000px; height:100px; background-color:lightpink">
  <h1 style="font-size:70px; text-align:center">Coninna Crowdfunding</h1>
</div>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
<%= yield %>

</body>
</html>
