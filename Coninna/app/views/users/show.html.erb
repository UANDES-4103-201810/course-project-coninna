<p id="notice"><%= notice %></p>
<div style="width:100; height:100; background-color:lightpink; padding-top: 0px">
  <h1 style="font-size:50px; text-align:left">My Profile</h1>
</div>



<table>

  <tbody>

    <div class="row">

      <div class="col-sm-4" style="padding-top: 40px">
        <p>Name: <%= @user.name %></p>
        <p>User Name: <%= @user.user_name %></p>
        <p>Phone: <%=@user.phone %></p>
        <p>Mail: <%=@user.mail%></p>
        <p>Date of Birth: <%=@user.dob%></p>
        <p>Credit Card: <%=@user.credit_card_info%></p>
        <p>Address: <%= @user.address %></p>
        <p>Country: <%=@user.country%></p>



        <div class="col-sm-6">
          <% if user_signed_in? %>
            <%= link_to 'Edit', edit_user_path(@user) %>


          <% end %>
        </div>
        <br>
      </div>
    </div>

  </tbody>
</table>



