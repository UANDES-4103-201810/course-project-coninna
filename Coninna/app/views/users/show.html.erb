<p id="notice"><%= notice %></p>
<%if user_signed_in? && current_user.id == @user.id %>
	<div style="width:100; height:100; background-color:lightpink; padding-top: 0px">
	  <h1 style="font-size:50px; text-align:left">My Profile</h1>
	</div>
<% else %>
	<div style="width:100; height:100; background-color:lightpink; padding-top: 0px">
	  <h1 style="font-size:50px; text-align:left">User Profile</h1>
	</div>

<%end%>

<table>

  <tbody>

    <div class="row">

      <div class="col-sm-4" style="padding-top: 40px">
        <div class="container">
          <p><strong>Name:</strong> <%= @user.name %></p>
          <p><strong>User Name:</strong> <%= @user.user_name %></p>
          <p><strong>Phone:</strong> <%= @user.phone %></p>
          <p><strong>Mail:</strong> <%= @user.email %></p>
          <p><strong>Date of Birth:</strong> <%= @user.dob %></p>
          <p><strong>Credit Card:</strong> <%= @user.credit_card_info %></p>
          <p><strong>Address:</strong> <%= @user.address %></p>
          <p><strong>Country:</strong> <%= @user.country %></p>
	   
	  <% if @user.admin %>
	     <p><strong>Role: </strong>Yay an admin!
	     <%end%>
	</p>
        </div>


        <div class="col-sm-6">
          <% if user_signed_in? && current_user == @user %>
            <%= link_to 'Edit', edit_user_registration_path(@user) %>
          <% end %>
    <% if user_signed_in? %>
      <% if current_user.admin%>
        <%= link_to 'Edit', edit_user_path(@user) %>
        <%= link_to 'Destroy', @user, method: :delete, data: {confirm: 'Are you sure?'} %>

      <% end %>
    <% end %>
        </div>
        <br>
      </div>
    </div>

  </tbody>
</table>
<%= link_to 'Back', projects_path %>


