<p id="notice"><%= notice %></p>
<div style="width:100; height:100; background-color:lightpink; padding-top: 0px">
	  <h1 style="font-size:50px; text-align:left">Users</h1>
</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <table>
<%if current_user.admin %>

  <%= link_to 'New User', new_user_path , class: "btn btn-dark"%>
  
<% end %>
    <tbody>
    <% @users.each do |user| %>
      <div class="row">

        <div class="col-sm-2" style="padding-top: 40px">
          <h4><%= link_to user.user_name, user %></h4>
          <p><%= user.name %></p>
	  <% if user.admin %>
	    <p>Admin</p>
	  <%end%>
	</div>
	<div class= "col-sm-2" style="padding-top: 40px">
	  <% if current_user.admin%>
		
  			<%= link_to 'Edit', edit_user_path(user), class:"btn btn-default" %>
  			<%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
	 	
	  <% end %>
	</div>
          <br>
        </div>
      </div>
    <% end %>
    </tbody>
  </table>
      

  </tbody>
</table>

